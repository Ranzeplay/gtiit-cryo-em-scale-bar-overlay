<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="370" SizeToContent="Height" WindowStartupLocation="CenterOwner"
        x:Class="ScaleBarOverlay.ImportOptionsDialog"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Import Options">
    <StackPanel Margin="16" Spacing="12">
        <TextBlock Text="Magnification" Margin="0,0,0,4" />
        <ComboBox x:Name="OptionsComboBox" ItemsSource="{Binding Options}" SelectedIndex="0" HorizontalAlignment="Stretch">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <StackPanel Margin="0,0,0,4">
            <TextBlock Text="Destination folder" />
            <TextBlock Text="Leave empty to use the source folder of each image" FontSize="12" FontWeight="Light" Foreground="#808080"></TextBlock>
        </StackPanel>
        <Grid ColumnDefinitions="*,Auto">
            <TextBox x:Name="DestinationPathTextBox" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
            <Button x:Name="SelectDestinationDirectoryButton" Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center" Click="SelectDestinationDirectoryButton_OnClick">Browse</Button>
        </Grid>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Click="OnOkClicked" HorizontalContentAlignment="Center" />
            <Button Content="Cancel" Width="80" Click="OnCancelClicked" HorizontalContentAlignment="Center" />
        </StackPanel>
    </StackPanel>
</Window>

