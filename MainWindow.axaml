<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScaleBarOverlay"
        x:DataType="local:MainWindow"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
        x:Class="ScaleBarOverlay.MainWindow"
        Title="ScaleBarOverlay">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" /> <!-- 间隔 -->
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <!-- 左侧 DataGrid 占用整个左侧空间 -->
        <DataGrid Grid.Column="0"
                  ItemsSource="{Binding ImageTasks}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  CanUserResizeColumns="True"
                  VerticalScrollBarVisibility="Auto"
                  Name="ImagesDataGrid"
                  SelectionChanged="OnDataGridSelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="图像路径"
                                    Binding="{Binding ImagePath}"
                                    Width="*" />
                <DataGridTextColumn Header="放大倍率"
                                    Binding="{Binding Magnification.DisplayText}"
                                    Width="Auto" />
                <DataGridTextColumn Header="输出路径"
                                    Binding="{Binding OutputPath}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 右侧布局 -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 右侧图片预览 -->
            <Border Grid.Row="0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="0,0,0,10">
                <Grid>
                    <Image Stretch="Uniform" Source="{Binding PreviewImageSource}" />
                    <!-- 加载指示器 -->
                    <Border IsVisible="{Binding IsPreviewLoading}"
                            Background="#80000000"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <ProgressBar IsIndeterminate="True" 
                                    Width="100" 
                                    Height="10" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" />
                    </Border>
                    <!-- 无图像时的提示 -->
                    <TextBlock IsVisible="{Binding PreviewImageSource, Converter={x:Static ObjectConverters.IsNull}}"
                              Text="选择图像以查看预览" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Opacity="0.5" />
                </Grid>
            </Border>

            <!-- 边距控制 - 优化后的控件 -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="缩放条边距:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                
                <Slider Grid.Row="1"
                        Minimum="10" 
                        Maximum="200" 
                        Value="{Binding ScaleBarMargin}" 
                        TickFrequency="10"
                        TickPlacement="BottomRight"
                        IsSnapToTickEnabled="True"
                        Margin="0,0,0,10"
                        IsEnabled="{Binding !!SelectedImageTask}"/>
                
                <!-- 数字输入区域 - 独立放置在滑块下方 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                              Text="精确数值:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    
                    <NumericUpDown Grid.Column="1"
                                  Value="{Binding ScaleBarMargin}" 
                                  Minimum="10" 
                                  Maximum="200"
                                  Width="120"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Padding="5"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="Black"
                                  ButtonSpinnerLocation="Right"
                                  ShowButtonSpinner="True"
                                  AllowSpin="True"
                                  ClipValueToMinMax="True"
                                  FormatString="0"
                                  IsEnabled="{Binding !!SelectedImageTask}">
                        <NumericUpDown.Styles>
                            <Style Selector="NumericUpDown /template/ TextBox">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </NumericUpDown.Styles>
                    </NumericUpDown>
                </Grid>
            </Grid>

            <!-- 预览控制按钮 - 放在第三行 -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left">
                <CheckBox Content="显示处理预览" IsChecked="{Binding !IsOriginalPreview}" Margin="0,0,10,0" />
                <Button Content="刷新预览" Margin="10,0,0,0" Click="OnRefreshPreviewClicked" />
            </StackPanel>
            
            <!-- 底部按钮 - 放在第四行 -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,0">
                <Button Content="添加" Width="80" Margin="0,0,10,0" Click="OnAddClicked" />
                <Button Content="运行" Width="80" Click="OnRunClicked" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>

