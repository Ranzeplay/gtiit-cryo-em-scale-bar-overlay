<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScaleBarOverlay"
        x:DataType="local:MainWindow"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
        x:Class="ScaleBarOverlay.MainWindow"
        Title="ScaleBarOverlay">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" /> <!-- Spacing -->
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <!-- DataGrid takes the entire left space -->
        <DataGrid Grid.Column="0"
                  ItemsSource="{Binding ImageTasks}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  CanUserResizeColumns="True"
                  VerticalScrollBarVisibility="Auto"
                  Name="ImagesDataGrid"
                  SelectionChanged="OnDataGridSelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Image Path"
                                    Binding="{Binding ImagePath}"
                                    Width="*" />
                <DataGridTextColumn Header="Magnification"
                                    Binding="{Binding Magnification.DisplayText}"
                                    Width="Auto" />
                <DataGridTextColumn Header="Output Path"
                                    Binding="{Binding OutputPath}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Right layout -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Right side image preview -->
            <Border Grid.Row="0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="0,0,0,10">
                <Grid>
                    <Image Stretch="Uniform" Source="{Binding PreviewImageSource}" />
                    <!-- Loading indicator -->
                    <Border IsVisible="{Binding IsPreviewLoading}"
                            Background="#80000000"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <ProgressBar IsIndeterminate="True" 
                                    Width="100" 
                                    Height="10" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" />
                    </Border>
                    <!-- No image hint -->
                    <TextBlock IsVisible="{Binding PreviewImageSource, Converter={x:Static ObjectConverters.IsNull}}"
                              Text="Select an image to view preview" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Opacity="0.5" />
                </Grid>
            </Border>

            <!-- Margin control - optimized controls -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Scale Bar Margin:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                
                <Slider Grid.Row="1"
                        Minimum="10" 
                        Maximum="200" 
                        Value="{Binding ScaleBarMargin}" 
                        TickFrequency="10"
                        TickPlacement="BottomRight"
                        IsSnapToTickEnabled="True"
                        Margin="0,0,0,10"
                        IsEnabled="{Binding !!SelectedImageTask}"/>
                
                <!-- Numeric input area - placed independently below slider -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                              Text="Precise Value:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    
                    <NumericUpDown Grid.Column="1"
                                  Value="{Binding ScaleBarMargin}" 
                                  Minimum="10" 
                                  Maximum="200"
                                  Width="120"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Padding="5"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="Black"
                                  ButtonSpinnerLocation="Right"
                                  ShowButtonSpinner="True"
                                  AllowSpin="True"
                                  ClipValueToMinMax="True"
                                  FormatString="0"
                                  IsEnabled="{Binding !!SelectedImageTask}">
                        <NumericUpDown.Styles>
                            <Style Selector="NumericUpDown /template/ TextBox">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </NumericUpDown.Styles>
                    </NumericUpDown>
                </Grid>
            </Grid>

            <!-- Preview control buttons - in the third row -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left">
                <CheckBox Content="Show Processed Preview" IsChecked="{Binding !IsOriginalPreview}" Margin="0,0,10,0" />
                <Button Content="Refresh Preview" Margin="10,0,0,0" Click="OnRefreshPreviewClicked" />
            </StackPanel>
            
            <!-- Bottom buttons - in the fourth row -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,0">
                <Button Content="Add" Width="80" Margin="0,0,10,0" Click="OnAddClicked" />
                <Button Content="Run" Width="80" Click="OnRunClicked" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>

