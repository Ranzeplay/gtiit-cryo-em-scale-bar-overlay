<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300" Height="150" WindowStartupLocation="CenterOwner"
        xmlns:local="clr-namespace:ScaleBarOverlay"
        x:Class="ScaleBarOverlay.MagnificationSelectionDialog"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Please select an option">
    <StackPanel Margin="16" Spacing="8">
        <TextBlock Text="Please select an option:" Margin="0,0,0,8" />
        <ComboBox x:Name="OptionsComboBox" ItemsSource="{Binding Options}" SelectedIndex="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Click="OnOkClicked" />
            <Button Content="Cancel" Width="80" Click="OnCancelClicked" />
        </StackPanel>
    </StackPanel>
</Window>

